= form_for @address do |f|
  %p
    = f.label :street
    = f.text_field :street
    = @address.errors[:street].join(",")
  %p
    = f.label :city
    = f.text_field :city
    = @address.errors[:city].join(",")
  %p
    = f.label :state
    = f.select :state, Address::US_STATES
    = @address.errors[:city].join(",")
  %p
    = f.label :zip
    = f.text_field :zip
    = @address.errors[:zip].join(",")
  = f.hidden_field :user_id

  = f.submit "Save"